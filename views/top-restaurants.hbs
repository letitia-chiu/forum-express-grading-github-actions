{{> restaurant-tabs route='topRestaurants'}}

<h1>Top 10 人氣餐廳</h1>
<hr>

<div class="container d-flex flex-column align-items-center">

  {{#each restaurants}}
  <div class="card mb-3" style="width: 540px; display: block;">
    <div class="row g-0">

      {{!-- Restaurant Image --}}
      <div class="col-md-4">
        <img src="{{this.image}}" class="img-fluid rounded-start" alt="image: {{this.Restaurant.name}}">
      </div>

      <div class="col-md-8">
        <div class="card-body">

          {{!-- Restaurant Name --}}
          <h5 class="card-title">
            <a href="/restaurants/{{this.id}}">{{this.name}}</a>
          </h5>

          {{!-- Favorited Counts --}}
          <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
          <span class="bg-secondary badge">瀏覽數：{{this.viewCounts}}</span>

          {{!-- Description --}}
          <p class="card-text">
            {{this.description}}
          </p>

          <div class="d-flex">
            {{!-- Show detail button --}}
            <a href="/restaurants/{{this.id}}" class="btn btn-primary m-1">Show</a>

            {{!-- Add / Remove Favorite --}}
            {{#if isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger m-1">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button type="submit" class="btn btn-primary m-1">加到最愛</button>
            </form>
            {{/if}}
          </div>

        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>