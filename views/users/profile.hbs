<div class="card mb-3" >
  <div class="row g-0">
    <div class="col-md-4">
      {{#if profile.image}}
        <img src="{{profile.image}}" width="500px" height="500x" class="img-fluid rounded-start" alt="...">
      {{else}}
        <img src="/images/avatars/no-user-image.jpeg" width="500px" height="500x" class="img-fluid rounded-start" alt="no user image">
      {{/if}}
      
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title mb-3">{{profile.name}}</h5>
        <p class="card-text">{{profile.email}}</p>
        <p class="card-text">{{comments.count}} 已評論餐廳</p>
        {{#ifCond profile.id currentUser}}
        <a href="/users/{{profile.id}}/edit" class="btn btn-primary mt-5">edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="card">
  <h5 class="card-header">{{comments.count}} 已評論餐廳</h5>
  <div class="card-body">
    <div class="container">
      <div class="row row-cols-auto g-2 g-lg-3">

        {{#each comments.rows}}
        <div class="col">
          <div class="p-1 border bg-light">
            <a href="/restaurants/{{this.Restaurant.id}}">
              <img src="{{this.Restaurant.image}}" style="width: 100px;">
            </a>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>